<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ChoiceBox?>
<Pane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.controllers.LfsrStatePathController">
    <VBox>
        <children>
            <HBox>
                <VBox>
                    <Label fx:id="feedbackPosLb" text="Feedback Positions">
                        <VBox.margin>
                            <Insets bottom="10.0" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </Label>
                    <TextArea fx:id="feedbackPosTa" maxHeight="20.0" maxWidth="200.0"/>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </VBox>
                <VBox>
                    <Label fx:id="lengthLb" text="LFSR Length">
                        <VBox.margin>
                            <Insets bottom="10" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </Label>
                    <TextArea fx:id="lengthTa" maxHeight="20.0" maxWidth="200.0">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                    </TextArea>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </VBox>

                <VBox>
                    <Label fx:id="sumPosLb" text="Summary Positions">
                        <VBox.margin>
                            <Insets bottom="10" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </Label>
                    <TextArea fx:id="sumPosTa" maxHeight="20.0" maxWidth="200.0">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                    </TextArea>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </VBox>

            </HBox>
            <VBox>
                <Label fx:id="typeLb" text="LFSR Type">
                    <VBox.margin>
                        <Insets bottom="10" right="10.0"/>
                    </VBox.margin>
                </Label>
                <ChoiceBox fx:id="typeCb" maxHeight="20.0" maxWidth="200.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ChoiceBox>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </VBox>

            <HBox>
                <TextArea fx:id="resultTa" prefHeight="196.0" prefWidth="621.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </TextArea>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </HBox>

            <Button fx:id="generateBtn" maxWidth="Infinity" onAction="#generate" text="Generate">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
        </children>
    </VBox>
</Pane>
